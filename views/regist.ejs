                <input type="text" class="form-control" name="uname" id="uname" placeholder="请输入用户名,可用中文,用户名不可与其他人重复">
            </div>
            <div class="form-group">
                <label>密码</label>
                <input type="password" class="form-control" name="pwd" id="pwd" placeholder="至少六位">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox">遵守协议内容
                </label>
            </div>
            <button type="submit" class="btn btn-default" id="regist">注册</button>
        </fieldset>
    </form>
