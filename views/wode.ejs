    <style>
        .navbar .container-fluid .navbar-header a{margin-left: 100px;}
        .navbar .container-fluid .navbar-collapse .navbar-right li:last-child{margin-right: 100px;}
        .container{margin-left: 120px;margin-right: 120px;padding-top: 70px;}
        .container ul{list-style: none;margin-left: -40px;}
        .container ul li:last-child{margin-bottom: 25px;}
    </style>
