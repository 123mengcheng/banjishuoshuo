    <%for(var i=0;i<liuyan.length;i++){%>

            <ul>
                <%if(liuyan[i]!=undefined){%>
                    <li><%=liuyan[i].shuo%></li>
                    <li><%=liuyan[i].time%></li>
                <%}else{%>
                    <li></li>
                    <li></li>
                <%}%>
            </ul>

    <%}%>


    <p class="copy">&copy;2016 Company,Inc.</p>
</div>

</body>
